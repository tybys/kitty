<div class="col-md-12">
  <%= form_for :cat, url: cats_path do |f| %>
      <p>
        <%= f.label :name %><br>
        <%= f.text_field :name %>
      </p>

      <p>
        <%= f.label :text %><br>
        <%= f.text_area :text %>
      </p>

        <%= f.file_field :picture %>


      <% if current_user %>
          <%= f.hidden_field :user_id, :value => current_user.id %>
      <% end %>

      <p>
        <%= f.submit %>
      </p>
  <% end %>


</div>