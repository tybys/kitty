<h1>Listing articles</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>

  <% @cat.each do |cat| %>
    <tr>
      <td><%= cat.name %></td>
      <td><%= cat.text %></td>
      <td><%= image_tag cat.picture.url %></td>

      <td><%= link_to 'Show', cat_path(cat) %></td>

      <td>
        <%= Like::Like.with_likeable(cat).count %>


        <% if Like::Like.liking?(current_user, cat) %>
          <%= link_to 'Unlike', like_path_for(cat), method: :delete %>
        <% else %>
          <%= link_to 'Like', like_path_for(cat), method: :post %>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>