
<!DOCTYPE html>
<html>
<head>
  <title>
    <% if params['controller'] == 'welcome' %>
      home
    <% else %>
      <%= @title %>
    <% end %>
  </title>
  <meta charset="utf-8" />
  <%= stylesheet_link_tag '/assets/bootstrap.min.css', media: 'all' %>
  <%= stylesheet_link_tag '/assets/app.css', media:  'all' %>

  <%= csrf_meta_tags %>
  <%= javascript_include_tag 'https://ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.min.js' %>
</head>
<body class="<%= "#{controller.controller_name} #{@body_class}".strip %>">
  <div class="container-fluid">
    <%= render "shared/header" %>
    <div class="row">
      <div class="container">
        <%= yield %>
      </div>
    </div>
    <div class="row">
      <div class="container">
        <%= debug(params) if Rails.env.development? %>
      </div>
    </div>
  </div>

<div class="modal fade" tabindex="-1" role="dialog" id="selCat">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-body"></div>
    </div>
  </div>
</div>

<div id="scripts" hidden>
  <%= javascript_include_tag '/assets/bootstrap.min.js' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
</div>
</body>
</html>