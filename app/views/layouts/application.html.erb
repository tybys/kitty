
<!DOCTYPE html>
<html>
<head>
  <title>
    <% if params['controller'] == 'welcome' %>
      home
    <% else %>
      <%= @title %>
    <% end %>
  </title>
  <meta charset="utf-8" />
  <%#= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>

  <%= stylesheet_link_tag '/assets/bootstrap.min.css', media: 'all' %>
  <%= stylesheet_link_tag '/assets/app.css', media:  'all' %>

  <%= csrf_meta_tags %>
</head>
<body class="<%= "#{controller.controller_name} #{@body_class}".strip %>">
<div class="container-fluid">
  <div class="row header">
    <div class="container">
      <div class="col-md-12">
        <nav class="navbar navbar-default">
          <div class="container-fluid">
            <div class="navbar-header">
              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              <a class="navbar-brand" href="/">cat</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
              <ul class="nav navbar-nav">
                <li><a href="/cats/new">new cat</a></li>
              </ul>
              <%= render('shared/search') %>
              <ul class="nav navbar-nav navbar-right">
                <% if current_user %>
                    <li>
                      <a href="#">Signed in as <%= current_user.name %></a>
                    </li>
                    <li><%= link_to "Logout", '/logout' %></li>
                <% else %>
                    <li><%= link_to 'Login', '/login' %></li>
                    <li><%= link_to 'Signup', '/signup' %></li>
                <% end %>

              </ul>
            </div><!-- /.navbar-collapse -->
          </div><!-- /.container-fluid -->
        </nav>
        </div>
      </div>
    </div>
  <div class="row">
    <div class="container">

      <%= yield %>

    </div>
  </div>
  <div class="row">
    <div class="container">
      <%= debug(params) if Rails.env.development? %>
    </div>
  </div>
  </div>


</div>

<div class="modal fade" tabindex="-1" role="dialog" id="selCat">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Modal title</h4>
      </div>
      <div class="modal-body">
        <p>One fine body&hellip;</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>

<div id="scripts" hidden>
  <%= javascript_include_tag 'https://ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.min.js' %>
  <%= javascript_include_tag '/assets/bootstrap.min.js' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
</div>
</body>
</html>