<% @title = "catogramm" %>
<div class="col-md-12">

  <%= gravatar_for @user%>
  <%= @user.name %><br/>
  <%= @user.nickname %><br/>
  <%= @user.website %><br/>
  <%= @user.about %><br/>
  <%= @user.phone %><br/>
  <%= @user.sex %><br/>



  <% @users_cats.each do |usersCat| %>
      <%= usersCat.name %><br/>
      <div><%= image_tag usersCat.picture.url(:thumb) %></div>
  <% end %>

  <% if current_user %>
    <%= link_to 'edit profile', edit_user_path %>
  <% else %>
    <%#= link_to 'Like', edit_user_path %>
  <% end %>

  <div>
    have <%= @users_cats_count %> cats<br/>
  </div>
</div>