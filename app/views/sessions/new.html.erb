<% @title = "login" %>

<div class="col-md-12">
  <h1>Login</h1>

  <%= form_tag '/login' do %>

      <div class="form-group">
        <label>Email:</label>
        <%= text_field_tag :email, params, placeholder: 'email', class: 'form-control', value: '' %>
      </div>

      <div class="form-group">
        <label>Password:</label>
        <%= password_field_tag :password, params, placeholder: 'password', class: 'form-control', value: '' %>
      </div>

      <%= submit_tag "Submit" %>

  <% end %>
</div>