<div class="cat">
  <div>catid <%= @cat.id %></div>
  <div><%= @cat.name%></div>
  <div><%= @cat.text %></div>
  <div><%= image_tag @cat.picture.url %></div>
    <%= @cat.user.name %>
  <div id="like">
    <svg version="1.1" id="" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" width="40px" height="40px" viewBox="0 0 512 512" style="enable-background:new 0 0 512 512;" xml:space="preserve"><path id="template" d="M340.8,98.4c50.7,0,91.9,41.3,91.9,92.3c0,26.2-10.9,49.8-28.3,66.6L256,407.1L105,254.6c-15.8-16.6-25.6-39.1-25.6-63.9c0-51,41.1-92.3,91.9-92.3c38.2,0,70.9,23.4,84.8,56.8C269.8,121.9,302.6,98.4,340.8,98.4 M340.8,83C307,83,276,98.8,256,124.8c-20-26-51-41.8-84.8-41.8C112.1,83,64,131.3,64,190.7c0,27.9,10.6,54.4,29.9,74.6L245.1,418l10.9,11l10.9-11l148.3-149.8c21-20.3,32.8-47.9,32.8-77.5C448,131.3,399.9,83,340.8,83L340.8,83z"/></svg>
    <%= Like::Like.with_likeable(@cat).count %>

    <div>
      <hr/>
      <h6>Users like your cat</h6>
      <% catId(@cat.id).each do |lu| %>
          <strong><%= lu["name"] %></strong>
      <% end %>
      <hr/>
    </div>
  </div>

  <div>
    <% if Like::Like.liking?(@current_user, @cat) %>
        <%= link_to 'Unlike', like_path_for(@cat), method: :delete %>
    <% else %>
        <%= link_to 'Like', like_path_for(@cat), method: :post %>
    <% end %>
  </div>


</div>

<% @cat.comments.each do |comment| %>
    <p>
      <strong>Commenter:</strong>
      <%= comment.commenter %>
    </p>

    <p>
      <strong>Comment:</strong>
      <%= comment.body %>
    </p>
<% end %>
<%= form_for([@cat, @cat.comments.build]) do |f| %>
    <p>
      <%= f.label :commenter %><br>
      <%= f.text_field :commenter %>
    </p>
    <p>
      <%= f.label :body %><br>
      <%= f.text_area :body %>
    </p>
    <p>
      <%= f.submit %>
    </p>
<% end %>